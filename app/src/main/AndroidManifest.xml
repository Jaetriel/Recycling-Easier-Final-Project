<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mapapplication">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Recyling Easier"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity android:name=".ItemDescriptionActivity"
            android:label="Recycling Easier - View Entry"></activity>
        <activity
            android:name=".HomeActivity"
            android:label="Recycling Easier - Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ScanActivity"
            android:label="Recycling Easier - Scan"/>
        <activity android:name=".AddEntryActivity"
            android:label="Recycling Easier - New Entry"/>
        <activity android:name=".ListViewActivity"
            android:label="Recycling Easier - All Entries"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDbqFCQEqbi4IsfdcJqthLGoqrTmwbifFs" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name=".MapsActivity"
            android:label="Recycling Easier - Map"
            android:hardwareAccelerated="true"></activity>
    </application>


</manifest>